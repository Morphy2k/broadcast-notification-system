doctype html

html(lang="en")
    head
      title Notification window
      link(href="/template/ressources/css/notification.css", rel="stylesheet")
      script.
        function playSound(type) {
              if (type == 'subscription') {
                  var sub = new Audio('/template/ressources/media/sub.mp3');
                  setTimeout(function() { sub.play() }, 200);
              }
              if (type == 'donation') {
                  var donation = new Audio('/template/ressources/media/donation.mp3');
                  setTimeout(function() { donation.play() }, 200);
              }
          }

    body
      #follow.notification.default
        .img
        .text
          .type Neuer Follower
          .name

      #sub.notification.default
        .img
        .text
          .type Neuer Sub
          .name

      #host.notification.default
        .img
        .text
          .type Neuer Host
          .name

      #donation.notification
        .img
        .text
          .type Neue Donation
          .name
          #amount
          #message

    include ../.include/required.pug
